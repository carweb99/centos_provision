#!/usr/bin/env bash
set -e -x -o pipefail

rm -rf "${LOCAL_BUILD_PATH}"

mkdir -p "${LOCAL_BUILD_PATH}"

cp scripts/*.sh "${LOCAL_BUILD_PATH}"

cp playbook.yml install-roles.yml ansible.cfg "${LOCAL_BUILD_PATH}/${ANSIBLE_FOLDER}"

zip -r "${LOCAL_BUILD_PATH}/${ANSIBLE_FOLDER}/playbook.zip" roles **/*.yml *.cfg *.txt
