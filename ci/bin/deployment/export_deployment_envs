#!/usr/bin/env bash
set -e -x -o pipefail

if [[ "$#" -ne  2 ]]; then
    echo "Usage: ./export_notification_text VERSION PATH"
    exit 1
fi


export PLAYBOOK_URL="https://${S3_HOST}/${S3_BUCKET}/${2}/playbook.zip"

export NOTIFICATION_TEXT="Installer ${PLAYBOOK_URL}/install.sh (${1}) has been uploaded.
\`curl ${PLAYBOOK_URL}/install.sh > run && bash run -L ru\`
"
