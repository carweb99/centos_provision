#!/usr/bin/env bash
set -e -x -o pipefail

if test "$#" -ne 2; then
    echo "Usage: ./inject_installer_vars VERSION PLAYBOOK_URL"
fi

scripts_dir="./scripts"

sed -i "s/^RELEASE_VERSION=.*/RELEASE_VERSION='${1}'/g" "$scripts_dir/install.sh"
sed -i "s/^DEFAULT_PLAYBOOK_URL=.*/DEFAULT_PLAYBOOK_URL='${2}'/g" "$scripts_dir/install.sh"

