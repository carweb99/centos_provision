#!/usr/bin/env bash
set  -x

docker run \
    --rm -it \
    --privileged \
    -e "HOME_DIR=${PWD}" \
    -v ${PWD}/../:/data \
    -v /usr/local/bundle \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -v ${PWD}/tmp/:/data/scripts/tmp/ \
    -w /data/scripts \
    apliteni/bundle-rspec \
    bundle exec rspec $@
